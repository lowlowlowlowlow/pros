@charset "utf-8";
/* CSS Document */

*{
	margin:0;
	border:0;
	padding:0;
}

a{
	text-decoration:none;
}

ul{
	list-style:none;
}

.clear{
	clear:both;
}

i{
	text-decoration:none;
	font-style:normal;
}

header{
	background-color:#f1f1f1;
}

.hd_inner{
	line-height:30px;
	height:30px;
	width:1210px;
	margin:0 auto;
}

.nav{
	float:right;
}

.area{
	float:left;
	padding-left:10px;
	font-size:12px;
	color:#666;
}


.nav li{
	padding:0 2px; 
	height:30px;
	line-height:30px;
	float:left;
	font-size:12px;
}

.nav .spacer{
	padding:0;
	width:1px;
	height:12px;
	background-color:#ddd;
	margin-top:9px;
}

.nav a{
	color:#666;
}

.nav .logon{
	color:#c71722;
	padding-right:5px;
}

.dt{
	padding:0 8px;
}

.hd_inner .icon{
	padding-right:25px;
	position:relative;
}

.hd_inner .icon i{
	display:inline-block;
	height:7px;
	position:absolute;
	top:12px;
	right:8px;
	font:15px/15px consolas;
	overflow:hidden;
}

.hd_inner .icon s{
	display:inline-block;
	position:relative;
	top:-7px;
	text-decoration:none;
}

#mobile{
	position:relative;
	padding-left:25px;
}

#mobile span{
	display:inline-block;
	width:15px;
	height:20px;
	background-image:url(../images/images3/jd2015img.png);
	position:absolute;
	top:5px;
	left:-14px;
}

.mid{
	width:1210px;
	margin:0 auto;
	padding:25px 0 17px 0;
}


.logo{
	width:362px;
	height:100%;
	float:left;
}

.search{
	float:left;
	width:643px;
}

.tosearch{
	width:447px;
	height:12px;
	border:1px solid #b71d1d;
	float:left;
	padding:10px 4px;	
	font-size:12px;
}

.pressearch{
	float:left;
	padding:10px 25px;
	text-align:center;
	background-color:#b71d1d;
	color:white;
	
}

.search_bottom{
	overflow:hidden;
	margin-top:5px;
}

.search_bottom li{
	float:left;
	font-size:12px;
	height:19px;
	line-height:19px;
	text-align:center;
	margin-right:10px;
}

.search_bottom a{
    color:#666;
}

.cart{
	float:left;
	width:139px;
	height:34px;
	border:1px dotted #dfdfdf;
	background-color:#f9f9f9;
	line-height:34px;
	text-align:center;
	font-size:12px;
	color:#666;
	position:relative;
	background-image:url(../images/images3/jd2015img.png);
	background-repeat:no-repeat;
	background-position:10px -50px;
}

.cart a{
	display:block;
	line-height:34px;
	width:100%;
	text-align:center;
	color:#666;
}

.cart i{
	position:absolute;
}

.arrow{
	top:0px;
	right:10px;
}

.amount{
	width:auto;
	padding:0 2px;
	height:14px;
	background-color:#c81624;
	color:white;
	line-height:14px;
	font-size:10px;
	text-align:center;
	border-radius:7px 7px 7px 0;
	top:-4px;
	right:17px;
}

.t_btm{
	border-bottom:1px solid #c81624;
}

.t_btm_inner{
	width:1210px;
	margin:0 auto;
}

.all_top{
	float:left;
}

.all_top a{
	display:block;
	width:90px;
	padding:15px 110px 15px 10px;
	
	color:white;
	font-size:14px;
}

.t_btm_inner ul{
	float:left;
	overflow:hidden;
}

.t_btm_inner ul li{
	float:left;
	padding:0 20px;
	line-height:44px;
	height:44px;
	text-align:center;
	font-size:14px;
}

.t_btm_inner ul li a{
	display:block;
	color:#333;
	font:100 14px/44px "microsoft yahei";
}

.banner{
	width:1210px;
	margin:0 auto;
	padding-bottom:10px;
}

.bn_leftnav{
	float:left;
	padding-right:10px;
}

.bn_leftnav ul{
	border:1px solid #9f0e18;
	overflow:hidden;
}

.bn_leftnav li{
	height:31px;
	line-height:31px;
	width:185px;
	padding:0 13px 0 10px;
	position:relative;
	color:white;
}


.bn_leftnav ul a{
	color:white;
	font-size:12px;
	display:inline-block;
	background-color:#c81624;
}

.bn_leftnav i{
	position:absolute;
	color:white;
	font-size:12px;
	top:3px;
	right:13px;
}

.banner_out{
	float:left;
	padding:10px 10px 0 0;
	position:relative;
}

.banner_main{
	width:730px;
	overflow:hidden;
	height:100%;
}

#ul2{
	position:absolute;
}

#ul2 li{
	float:left;
	width:18px;
	height:18px;
	margin-right:4px;
}

#ul2 a{
	display:block;
	background-color:#3d3f3e;
	border-radius:50%;
	color:white;
}

